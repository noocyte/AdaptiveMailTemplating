{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [        
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "size": "Large",
              "weight": "Bolder",
              "text": "Internvarsling fra {tenantname}"
            },
            {
              "type": "TextBlock",
              "text": "Du er blitt tildelt en ny oppgave i Powel Melding",
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Kategori:",
          "value": "{categoryname}"
        },
        {
          "title": "Status:",
          "value": "{statusname}"
        },
        {
          "title": "Frist for utf√∏relse:",
          "value": "{{DATE({deadline},LONG)}}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Link til oppgaven",
      "url": "{taskurl}"
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}